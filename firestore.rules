rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
        (request.auth.token.email == 'leviotte@icloud.com' ||
         request.auth.token.email == 'deneyer.liesa@telenet.be');
    }

    // ============================================================================
    // ADMIN ACCESS (voor development & debugging)
    // ============================================================================
    match /{document=**} {
      allow read: if isAdmin() || isAuthenticated();
    }

    // ============================================================================
    // USER PROFILES
    // ============================================================================
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/following/{followingId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    match /users/{userId}/followers/{followerId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // ============================================================================
    // WISHLISTS
    // ============================================================================
    match /wishlists/{wishlistId} {
      allow read: if resource.data.isPrivate == false ||
                   (isAuthenticated() && (
                     isOwner(resource.data.userId) ||
                     resource.data.sharedWith[request.auth.uid] == true
                   ));
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());
    }

    // ============================================================================
    // EVENTS
    // ============================================================================
    match /events/{eventId} {
      allow read: if isAuthenticated() && (
        isOwner(resource.data.organizer) ||
        exists(/databases/$(database)/documents/events/$(eventId)/participants/$(request.auth.uid))
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        isOwner(resource.data.organizer) ||
        (resource.data.participants[request.auth.uid] != null)
      );
      allow delete: if isAuthenticated() && (isOwner(resource.data.organizer) || isAdmin());
    }

    // ============================================================================
    // PROFILES (sub-profiles)
    // ============================================================================
    match /profiles/{profileId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    match /profiles/{profileId}/following/{followingId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    match /profiles/{profileId}/followers/{followerId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // ============================================================================
    // AFFILIATE & CONTENT
    // ============================================================================
    match /stores/{storeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /accounts/{accountId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ============================================================================
    // INQUIRIES & REQUESTS
    // ============================================================================
    match /inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /event_requests/{requestId} {
      allow read, write: if true;
    }
  }
}