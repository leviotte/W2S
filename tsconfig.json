{
  "compilerOptions": {
    // --- Kerninstellingen (Standaard & Veilig) ---
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // --- Cruciale Next.js & React Instellingen ---
    "moduleResolution": "bundler",
    "jsx": "react-jsx", // BELANGRIJK: Geeft Next.js' compiler (SWC) volledige controle voor optimale performance.
    "noEmit": true,
    // --- Pad Aliassen ---
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // --- "Gold Standard" Strictness Regels ---
    "strict": true,
    "forceConsistentCasingInFileNames": true, // VOORKOMT FOUTEN: Essentieel voor Linux-based deployments (Vercel).
    "noUncheckedIndexedAccess": true // VEILIGHEID: Dwingt je om te controleren of array/object-items bestaan, voorkomt runtime errors.
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts", // Preciezer pad voor betere performance.
    "src/**/*.tsx", // Preciezer pad voor betere performance.
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
